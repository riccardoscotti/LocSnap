<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/my_nav_graph"
            app:startDestination="@id/LoginFragment">

    <fragment
            android:id="@+id/LoginFragment"
            android:name="com.example.locsnap.LoginFragment"
            android:label="Login Fragment"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_login_to_register"
                app:destination="@id/RegisterFragment"/>

        <action
                android:id="@+id/action_login_to_choose"
                app:destination="@id/ChooseFragment"/>
    </fragment>

    <fragment
            android:id="@+id/RegisterFragment"
            android:name="com.example.locsnap.RegisterFragment"
            android:label="Register Fragment"
            tools:layout="@layout/fragment_register">
        <action
                android:id="@+id/action_register_to_login"
                app:destination="@id/LoginFragment"/>
    </fragment>

    <fragment
            android:id="@+id/UploadImagesFragment"
            android:name="com.example.locsnap.UploadImagesFragment"
            android:label="Upload Images Fragment"
            tools:layout="@layout/fragment_upload">
    </fragment>

    <fragment
            android:id="@+id/ChooseFragment"
            android:name="com.example.locsnap.ChooseFragment"
            android:label="Choose Fragment"
            tools:layout="@layout/fragment_choose">
    </fragment>

</navigation>