<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/fragment_choose"
                                                   android:name="com.example.ChooseFragment"
>
    <ImageView
            android:layout_width="41dp"
            android:layout_height="37dp" app:srcCompat="@drawable/plus"
            android:id="@+id/plusIcon"
            android:priority="10"
            app:layout_constraintStart_toEndOf="@+id/uploadButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/uploadButton"
            app:layout_constraintBottom_toBottomOf="@+id/uploadButton" app:layout_constraintHorizontal_bias="0.35"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="98dp" app:srcCompat="@drawable/locsnap_icon" android:id="@+id/locsnap_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.029999971"/>
    <TextView
            android:text="LocSnap"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/locsnap_icon"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/locsnap_icon"
            app:layout_constraintEnd_toEndOf="@+id/locsnap_icon" app:layout_constraintVertical_bias="0.0"
            android:fontFamily="@font/roboto_medium"/>
    <TextView
            android:text="Welcome, "
            android:textSize="20sp"
            android:layout_width="283dp"
            android:layout_height="114dp" android:id="@+id/welcomeText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25" android:textAlignment="center"/>

    <Button
            android:text="Upload collection"
            android:layout_width="207dp"
            android:layout_height="60dp" android:id="@+id/uploadButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#288BED" android:layout_marginBottom="140dp"
            app:layout_constraintTop_toBottomOf="@+id/nearbyButton" app:layout_constraintHorizontal_bias="0.313"
            app:layout_constraintVertical_bias="0.22"/>
    <Button
            android:text="See nearby pictures"
            android:layout_width="207dp"
            android:layout_height="60dp" android:id="@+id/nearbyButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#288BED" android:layout_marginBottom="388dp"
            app:layout_constraintHorizontal_bias="0.313" app:layout_constraintTop_toBottomOf="@+id/welcomeText"
    />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/camera" android:id="@+id/camIcon"
            android:priority="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.98"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"/>
    <ImageView
            android:layout_width="41dp"
            android:layout_height="37dp" app:srcCompat="@drawable/share" android:id="@+id/shareButton"
            app:layout_constraintStart_toEndOf="@+id/nearbyButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/nearbyButton"
            app:layout_constraintBottom_toBottomOf="@+id/nearbyButton" app:layout_constraintHorizontal_bias="0.353"
    />
</androidx.constraintlayout.widget.ConstraintLayout>