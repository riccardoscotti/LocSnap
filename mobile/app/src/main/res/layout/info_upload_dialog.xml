<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="200dp"
                                                   android:layout_height="200dp"
                                                   android:id="@+id/info_upload_dialog">

    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmButton"
            app:layout_constraintTop_toBottomOf="@+id/publicCheckBox"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.51"/>
    <CheckBox
            android:text="Show as public"
            android:layout_width="155dp"
            android:layout_height="50dp" android:id="@+id/publicCheckBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.064"
            app:layout_constraintHorizontal_bias="0.511" android:textAlignment="inherit"/>
    <RadioGroup
            android:layout_width="152dp"
            android:layout_height="95dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/publicCheckBox"
            app:layout_constraintBottom_toTopOf="@+id/confirmButton" android:textAlignment="center"
            android:baselineAligned="false" android:id="@+id/radiotype"
            app:layout_constraintHorizontal_bias="0.48">

        <RadioButton android:id="@+id/radio_city"
                     android:layout_width="127dp"
                     android:layout_height="34dp"
                     android:text="City"/>

        <RadioButton android:id="@+id/radio_mountain"
                     android:layout_width="127dp"
                     android:layout_height="33dp"
                     android:text="Mountain"/>

        <RadioButton android:id="@+id/radio_sea"
                     android:layout_width="128dp"
                     android:layout_height="28dp"
                     android:text="Sea"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>